<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/q"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:id="@+id/questionIdTxt"
            android:textSize="18sp"
            android:gravity="end"
            android:textAlignment="textEnd"
            tools:text="1 . "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/q"
            android:gravity="start"
            android:textAlignment="textStart"
            android:id="@+id/titleText"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title v Radio Title Radio Title"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sliderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout>