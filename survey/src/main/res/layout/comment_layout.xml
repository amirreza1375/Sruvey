<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questionIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/q"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="1 . " />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="@font/q"
            android:gravity="start"
            android:text="Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title v Radio Title Radio Title"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_back"
        android:layout_margin="6dp"
        android:padding="2dp">
   <com.google.android.material.textfield.TextInputLayout
       android:hint="@string/commmentHint"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.google.android.material.textfield.TextInputEditText
           android:fontFamily="@font/q"
           android:minHeight="40dp"
            android:background="@null"
           android:paddingStart="4dp"
           android:paddingEnd="4dp"
           android:id="@+id/commentField"
           android:labelFor="@id/commentField"
           android:textColor="@color/generalHeadLineTextColor"
           android:textColorHint="@color/generalHintColor"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </com.google.android.material.textfield.TextInputEditText>
   </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:fontFamily="@font/racingsansoneregular"
        android:layout_marginBottom="8dp"
        tools:text="MAX : 500"
        android:id="@+id/maxTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>